<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">
    <ImageView
        android:id="@+id/slider_img"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:src="@drawable/welcome_screen1" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/slider_img"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="40dp">

        <TextView
            android:id="@+id/slider_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/agencyb"
            android:text="WELCOME TO BOOK DROP"
            android:layout_centerHorizontal="true"
            android:textColor="@color/primary"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/slider_dis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/slider_heading"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/agencyb"
            android:gravity="center"
            android:text="A proper Library managment system"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </RelativeLayout>
</RelativeLayout>


</RelativeLayout>